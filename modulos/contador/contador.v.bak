module contador #(parameter MAX_VALUE)(
	input wire clk,
	input wire button,
	input wire reset,
	output wire [9:0] output
);

reg [9:0] value;


always @(posedge clk or negedge reset) begin
	if(!reset) begin
		value <= 10'd0;
	end
	else begin
		if(value == MAX_VALUE) begin
			value <= 10'd0;
		end
		else begin
			value <= value + 10'd1;
		end
	end
end

assign output = value;


endmodule